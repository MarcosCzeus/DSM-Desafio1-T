<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:gravity="center">

    <EditText
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Estudiante"
        android:inputType="textPersonName"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="@dimen/button_margin" />

    <EditText
        android:id="@+id/inputNote1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 1 (15%)"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="@dimen/button_margin" />

    <EditText
        android:id="@+id/inputNote2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 2 (15%)"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="@dimen/button_margin" />

    <EditText
        android:id="@+id/inputNote3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 3 (20%)"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="@dimen/button_margin" />

    <EditText
        android:id="@+id/inputNote4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 4 (25%)"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="@dimen/button_margin" />

    <EditText
        android:id="@+id/inputNote5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 5 (25%)"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="@dimen/button_margin" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/button_margin"
        android:text="Calcular Promedio" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/button_margin" />
</LinearLayout>
